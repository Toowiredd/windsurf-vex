{
  "name": "windsurf-vex",
  "displayName": "Windsurf VEX",
  "description": "VS Code Extension for Windsurf IDE - ADHD-friendly development environment",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "windsurf.toggle",
        "title": "Toggle Windsurf Tracking"
      },
      {
        "command": "windsurf.configure",
        "title": "Configure Windsurf"
      },
      {
        "command": "windsurf.showContext",
        "title": "Show Current Context"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "windsurf-sidebar",
          "title": "Windsurf",
          "icon": "resources/windsurf.svg"
        }
      ]
    },
    "views": {
      "windsurf-sidebar": [
        {
          "id": "windsurfContext",
          "name": "Current Context"
        },
        {
          "id": "windsurfHistory",
          "name": "Context History"
        }
      ]
    },
    "configuration": {
      "title": "Windsurf",
      "properties": {
        "windsurf.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Windsurf tracking"
        },
        "windsurf.contextSwitchThreshold": {
          "type": "number",
          "default": 15,
          "description": "Minutes before considering a context switch"
        },
        "windsurf.fileGroupThreshold": {
          "type": "number",
          "default": 30,
          "description": "Minutes to group related files"
        },
        "windsurf.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/.vscode/**",
            "**/out/**"
          ],
          "description": "Patterns to exclude from tracking"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "vscode-test": "^1.6.1",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@vscode/vsce": "^2.19.0",
    "chokidar": "^3.5.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toowiredd/windsurf-vex.git"
  },
  "publisher": "toowiredd"
}
